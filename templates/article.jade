
extends layout

block content

  .row
    .column-10

      include author

      span
        a(href='/blog/').nav-home &lsaquo;&lsaquo;&nbsp; blog

      p.article-date= moment.utc(page.date).format('MMMM DD, YYYY')

      h1.article-title= page.title
      
      p.article-author
        | #{ "by " }
        mixin author(page.metadata.author)
      
      article.article
        section.content!= typogr(page.html).typogrify()



