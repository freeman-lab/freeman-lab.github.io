doctype html
block vars
  - var bodyclass = null;

html(lang='en')

  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title= 'freemanlab'
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700,300,100')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Raleway:100,400,200,300')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=PT+Serif:400,400italic')
      link(rel='stylesheet', href="/css/shelves.css")
      link(rel='stylesheet', href=contents.css['main.css'].url)
      link(rel="icon" sizes="16x16 32x32" href="/favico.ico")
      script(src="//use.edgefonts.net/merriweather:n3,n4,n7,n9.js")

  body(class=bodyclass)

    div#wrapper

      div#header
        .row
          div.column-2
            block home

          div.column-5.prefix-5
            block nav
            
        .row
          div.column-7
            block label    

      div#content
        block content

      div#footer
        .row.no-select
          .column-3.prefix-9
            a.round(href='http://twitter.com/thefreemanlab' target='_blank')
              span.round-inside t
            a.round(href='http://github.com/freeman-lab' target='_blank')
              span.round-inside g
            a.round(href='mailto:the.freeman.lab-at-gmail.org')
              span.round-inside m
          
